<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".Fragments.ClientPetInteractionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/sp_client_pet_specie"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="32dp"
            android:padding="@dimen/login_edit_text_space" />

        <Spinner
            android:id="@+id/sp_client_pet_race"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="32dp"
            android:padding="@dimen/login_edit_text_space" />

        <EditText
            android:id="@+id/et_client_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edit_text_height"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/edit_text_rounded"
            android:hint="Nombre"
            android:fontFamily="@font/golden_sans"
            android:inputType="textPersonName"
            android:padding="@dimen/login_edit_text_space"
            android:textSize="@dimen/login_text_size" />


        <Button
            android:id="@+id/bt_client_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_button_xl_height"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/button_ripple_bg"
            android:text="Modificar"
            android:fontFamily="@font/golden_sans_bold"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/login_text_xl_size" />


    </LinearLayout>

</ScrollView>
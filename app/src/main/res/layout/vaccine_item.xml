<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="8dp"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="10dp"
    card_view:contentPadding="4dp">

    <LinearLayout
        android:id="@+id/linearLayout_vaccine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_estimated_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/golden_sans_bold"
            android:textColor="@color/colorGooglePlus"
            android:text="asdasd"
            android:textSize="@dimen/login_text_xl_size" />

        <TextView
            android:id="@+id/textView_vaccine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/golden_sans_bold"
            android:text="sdasd"
            android:textSize="@dimen/login_text_xl_size" />

        <TextView
            android:id="@+id/textView_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/golden_sans"
            android:text="sdasd"
            android:textSize="@dimen/login_text_size" />

    </LinearLayout>


</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".Fragments.AdminFragments.AdminAddScheduleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button

                android:id="@+id/bt_add_day"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/login_button_xl_height"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:padding="8dp"
                android:background="@drawable/button_ripple_bg"
                android:fontFamily="@font/golden_sans_bold"
                android:text="Abrir Calendario"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/login_text_xl_size" />

            <TextView
                android:id="@+id/et_add_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yyyy-mm-dd"
                android:textColor="@color/white2"
                android:textSize="25sp" />
        </LinearLayout>
        <Button
            android:layout_marginTop="50dp"
            android:id="@+id/bt_add_schedule"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="@dimen/login_button_xl_height"
            android:background="#E91E63"
            android:fontFamily="@font/golden_sans_bold"
            android:text="Guardar"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/login_text_xl_size" />
    </LinearLayout>


</ScrollView>
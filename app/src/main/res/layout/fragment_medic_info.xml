<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:fillViewport="true"
    tools:context=".Fragments.AdminFragments.ClientResumeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_medic_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edit_text_height"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/edit_text_rounded"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:padding="@dimen/login_edit_text_space"
            android:fontFamily="@font/golden_sans"
            android:textSize="@dimen/login_text_size" />

        <EditText
            android:id="@+id/et_medic_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edit_text_height"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/edit_text_rounded"
            android:hint="Correo"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/golden_sans"
            android:padding="@dimen/login_edit_text_space"
            android:textSize="@dimen/login_text_size" />

        <EditText
            android:id="@+id/et_medic_direction"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/edit_text_rounded"
            android:hint="InformaciÃ³n"
            android:inputType="textMultiLine"
            android:fontFamily="@font/golden_sans"
            android:padding="@dimen/login_edit_text_space"
            android:textSize="@dimen/login_text_size" />

        <Button
            android:id="@+id/bt_medic_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_button_xl_height"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/button_ripple_bg"
            android:text="Modificar"
            android:fontFamily="@font/golden_sans_bold"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/login_text_xl_size" />


    </LinearLayout>

</ScrollView>